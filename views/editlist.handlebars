<div class="card">

    {{!-- list title/day --}}
    <div class="box edit-header">
        <h3>{{list.list_date}}</h3>
    </div>

    {{!-- list body --}}
    <div class="editlist-container">
        <form id="editlist">
            <div class="box card-body">
                {{#if list.tasks}}
                    {{#each list.tasks as |task|}}
                    <div class="list-update">
                        <input class="edit-input" name="task" type="text" value="{{task.task}}" required>
                        <button data-id="{{task.id}}" class="updatetask" type="submit">update</button>
                        <button id="{{task.id}}" class="deletetask" type="submit">delete</button>
                    </div>
                    {{/each}}
                {{/if}}
            </div>

                {{!-- ADD TASK INPUT AND BUTTON --}}
                <form class="list-enter">
                    <input class="edit-input" type="text" name="task" placeholder="enter task" required>
                    <button type="submit" id="addtask" autocomplete="off" class="addtask">+</button>
                </form>
        </form>
    </div>

</div>

<script src="/js/edit-list.js"></script>